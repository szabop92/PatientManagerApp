<Application x:Class="PatientManagerApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:PatientManagerApp.ViewModels"
             xmlns:vw="clr-namespace:PatientManagerApp.Views"
             xmlns:local="clr-namespace:PatientManagerApp"
             StartupUri="Views/MainWindowView.xaml">
    <Application.Resources>

        <DataTemplate DataType="{x:Type vm:MainWindowViewModel}">
            <vw:MainWindowView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:AddNewPatientViewModel}">
            <vw:AddNewPatientView />
        </DataTemplate>
         
    </Application.Resources>
</Application>
